 SUBR	check_collisions


	callr	object_collisions

	PUSH	a13


	move	@round_tickcount,a0
	andi	1,a0
	jrz	jcaeven



;odd
	movi	process_ptrs+32*NUM_WRES,a4
	movi	NUM_WRES,a5
jcacollis_loop1
	move	-*a4,a10,L
	jrz	jcainactive1

	move	*a10(ANIMODE),a0
