 SUBR	overlap_collision

	;don't check this for zombies
	move	*a13(STATUS_FLAGS),a14
	btst	B_ZOMBIE,a14
	jrnz	txgexit

	movi	process_ptrs,a9
	movi	NUM_WRES,a10
txgcollis_loop
	.align
	move	*a9+,a11,L
	jrz	txginactive
	cmp	a11,a13
	jreq	txgskip			;skip self

	move	*a11(PLYRMODE),a14	;walk through dead
	cmpi	MODE_DEAD,a14
	jreq	txgskip

	move	*a11(ANIMODE),a0
	btst	MODE_OVERLAP_BIT,a0	;allow overlap?
	jrnz	txgskip

	;skip this.  if you wanna be able to go through someone, set your
	;MODE_OVERLAP bit.  NOCOLLIS should only apply to attack collisions.
;	move	*a13(ANIMODE),a0
;	move	*a11(ANIMODE),a1
;	or	a1,a0
;	btst	MODE_NOCOLLIS_BIT,a0
;	jrnz	txgskip

	move	*a11(ATTACH_PROC),a0,L		;skip this if attached
	cmp	a0,a13
	jreq	txgskip


	move	*a13(PLYRMODE),a0	;if player is on ground and
	cmpi	MODE_ONGROUND,a0	;then he can't move
	jreq	txgskip

	cmpi	MODE_DEAD,a0		;check dead too
	jreq	txgskip

	move	*a13(PLYRMODE),a0	;if player is running (or bouncing)
	cmpi	MODE_RUNNING,a0		;and opponent is on ground
	jreq	txgrunning		;then run through him
	cmpi	MODE_BOUNCING,a0
	jrne	txgnot_running
txgrunning
	calla	get_opp_plyrmode
	cmpi	MODE_ONGROUND,a0
	jreq	txgskip
txgnot_running


	move	*a13(ANIMODE),a0
	btst	MODE_OVERLAP_BIT,a0	;allow overlap?
	jrnz	txgskip

	move	*a13(OBJ_COLLX2),a5
	move	*a11(OBJ_COLLX1),a1
	sub	a1,a5			;Ax2 - Bx1
	jrle	txgno_overlap		;a5 = ROX

	move	*a13(OBJ_COLLX1),a0
	move	*a11(OBJ_COLLX2),a6
	sub	a0,a6			;Bx2 - Ax1
	jrle	txgno_overlap		;a6 = LOX

	move	*a13(OBJ_COLLZ2),a7
	move	*a11(OBJ_COLLZ1),a1
	sub	a1,a7			;Az2 - Bz1
	jrle	txgno_overlap		;a7 = BOZ

	move	*a13(OBJ_COLLZ1),a0
	move	*a11(OBJ_COLLZ2),a8
	sub	a0,a8			;Bz2 - Az1
	jrle	txgno_overlap		;a8 = TOZ

	move	*a13(OBJ_COLLY2),a1
	move	*a11(OBJ_COLLY1),a0
	sub	a0,a1			;Ay2 - By1
	jrle	txgno_overlap

	move	*a13(OBJ_COLLY1),a1
	move	*a11(OBJ_COLLY2),a0
	sub	a1,a0			;By2 - Ay1
	jrle	txgno_overlap

	move	*a13(PLYRMODE),a0
	cmpi	MODE_RUNNING,a0
	jreq	txgup_down

	move	a5,a0
	cmp	a6,a5			;a5-a6	(ROX-LOX)
	jrlt	txgrox_min
	move	a6,a0
txgrox_min
	move	a7,a1
	cmp	a8,a7			;a7-a8	(BOZ-TOZ)
	jrlt	txgboz_min
	move	a8,a1
txgboz_min

	move	*a11(PLYRMODE),a14	;if opp is on ground then
	cmpi	MODE_ONGROUND,a14	;slide off in Z
	jrne	txgskp

	srl	1,a0			;DZ / 2
txgskp

	cmp	a1,a0			;a0-a1	(MOX-MOZ)

	jrgt	txgup_down


;X glitch too big?
	cmpi	3dh,a1
	jrgt	txgup_down


;txgleft_right

	cmp	a6,a5			;a5-a6	(ROX-LOX)
	jrgt	txgright

;txgleft
	move	*a13(OBJ_XPOSINT),a0
	sub	a5,a0			;XPOS-ROX
	move	a0,*a13(OBJ_XPOSINT)

	jruc	txgud2

txgright
	move	*a13(OBJ_XPOSINT),a0
	add	a6,a0			;XPOS+LOX
	move	a0,*a13(OBJ_XPOSINT)

txgud2
	move	*a13(MOVE_DIR),a0
	jrz	txgexit
	andi	MOVE_UP|MOVE_DOWN,a0
	jrnz	txgexit

	movi	3,a0
	cmp	a8,a7			;a7-a8	(BOZ-TOZ)
	jrgt	txgd2
	neg	a0
txgd2
	move	*a13(OBJ_ZPOSINT),a14
	add	a0,a14
	move	a14,*a13(OBJ_ZPOSINT)
	rets





txgup_down
	cmp	a8,a7			;a7-a8	(BOZ-TOZ)
	jrgt	txgdown
;txgup
	move	*a13(OBJ_ZPOSINT),a0
	sub	a7,a0			;XPOS-BOZ
	move	a0,*a13(OBJ_ZPOSINT)
	jruc	txglr2

txgdown
	move	*a13(OBJ_ZPOSINT),a0
	add	a8,a0			;XPOS-TOZ
	move	a0,*a13(OBJ_ZPOSINT)

txglr2
	move	*a13(MOVE_DIR),a0
	jrz	txgexit
	andi	MOVE_LEFT|MOVE_RIGHT,a0
	jrnz	txgexit

	movi	3,a0
	cmp	a6,a5			;a5-a6	(ROX-LOX)
	jrgt	txgr2
	neg	a0
txgr2
	move	*a13(OBJ_XPOSINT),a14
	add	a0,a14
	move	a14,*a13(OBJ_XPOSINT)
	rets






txgno_overlap

txgskip
txginactive
	dsj	a10,txgcollis_loop
txgexit
	rets

