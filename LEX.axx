*****************************************************************************
 SUBRP	lex_hdhold_pile

douiTIMEOUT	.equ	60

douilp0
	SLEEPK	1
douilp
	move	*a8(PLYRMODE),a0
	cmpi	MODE_HEADHOLD,a0
	jrz	douicont
	cmpi	MODE_HEADHELD,a0
	jrnz	douilp0

douicont
	clr	a11

;	WAITSWITCH_DWN	J_AWAY,0,douilp
	WAITSWITCH_DWN	J_TOWARD,0,douilp

	movi	douiTIMEOUT,a11

	WAITSWITCH_DWN	J_TOWARD,0,douilp
	WAITSWITCH_DWN	B_SPUNCH,J_ALL,douilp
	
	move	*a8(PLYRMODE),a0
	cmpi	MODE_HEADHOLD,a0
	jrz	douislam
	cmpi	MODE_HEADHELD,a0
	jrnz	douilp0
	move	*a8(I_WILL_DIE),A14
	jrnz	douilp0

	move	*a8(IMMOBILIZE_TIME),a14
	jrnz	douilp0				;ignore

	calla	DO_REVERSAL
	calla	DO_REVERSAL_MESS

	;target WHOHITME -- don't hit anyone else
	SMRTTGT	a8,WHOHITME

	;immobilize WHOHITME
	move	*a8(WHOHITME),a0,L
	jruc	douiis_reversal

douislam
	move	*a8(IMMOBILIZE_TIME),a14
	jrnz	douilp0				;ignore

	movi	42,a10
	CREATE	MESSAGE_PID,BONUS_MESS

	;target WHOIHIT -- don't hit anyone else
	SMRTTGT	a8,WHOIHIT

	;immobilize WHOIHIT
	move	*a8(WHOIHIT),a0,L

douiis_reversal
	movk	15,a14
	move	a14,*a0(IMMOBILIZE_TIME)

	CALLA	FIND_AND_KILL_ENDLESS

	movi	lex_vsuplex_anim,a0
	move	a0,*a8(SPECIAL_MOVE_ADDR),L
	WRSND	W_LUGER,FLYKICK_T1,FLYKICK_T2

	SLEEPK	20

	jruc	douilp

