guyqTIMEOUT	.equ	60

guyqlp0
	SLEEPK	1
guyqlp
	move	*a8(PLYRMODE),a0
	cmpi	MODE_HEADHOLD,a0
	jrz	guyqcont
	cmpi	MODE_HEADHELD,a0
	jrnz	guyqlp0

guyqcont
	clr	a11

;	WAITSWITCH_DWN	J_UP,0,guyqlp
	WAITSWITCH_DWN	J_DOWN,0,guyqlp

	movi	guyqTIMEOUT,a11

	WAITSWITCH_DWN	J_DOWN,0,guyqlp
	WAITSWITCH_DWN	B_SKICK,J_ALL,guyqlp
	
	move	*a8(PLYRMODE),a0
	cmpi	MODE_HEADHOLD,a0
	jrz	guyqslam
	cmpi	MODE_HEADHELD,a0
	jrnz	guyqlp0
	move	*a8(I_WILL_DIE),A14
	jrnz	guyqlp0

	move	*a8(IMMOBILIZE_TIME),a14
	jrnz	guyqlp0				;ignore

	calla	DO_REVERSAL
	calla	DO_REVERSAL_MESS

	;target WHOHITME -- don't hit anyone else
	SMRTTGT	a8,WHOHITME

	;immobilize WHOHITME
	move	*a8(WHOHITME),a0,L

	.ref	lex_grab2elbow_rev_anim

	movi	lex_grab2elbow_rev_anim,a1
	jruc	guyqis_reversal

guyqslam
	move	*a8(IMMOBILIZE_TIME),a14
	jrnz	guyqlp0				;ignore

;fix !!! wrong name - jake
	movk	6,a10
	CREATE	MESSAGE_PID,BONUS_MESS

	;target WHOIHIT -- don't hit anyone else
