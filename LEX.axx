*****************************************************************************
 SUBRP	lex_hdhold_pile

ogtuTIMEOUT	.equ	60

ogtulp0
	SLEEPK	1
ogtulp
	move	*a8(PLYRMODE),a0
	cmpi	MODE_HEADHOLD,a0
	jrz	ogtucont
	cmpi	MODE_HEADHELD,a0
	jrnz	ogtulp0

ogtucont
	clr	a11

;	WAITSWITCH_DWN	J_AWAY,0,ogtulp
	WAITSWITCH_DWN	J_TOWARD,0,ogtulp

	movi	ogtuTIMEOUT,a11

	WAITSWITCH_DWN	J_TOWARD,0,ogtulp
	WAITSWITCH_DWN	B_SPUNCH,J_ALL,ogtulp
	
	move	*a8(PLYRMODE),a0
	cmpi	MODE_HEADHOLD,a0
	jrz	ogtuslam
	cmpi	MODE_HEADHELD,a0
	jrnz	ogtulp0
	move	*a8(I_WILL_DIE),A14
	jrnz	ogtulp0

	move	*a8(IMMOBILIZE_TIME),a14
	jrnz	ogtulp0				;ignore

	calla	DO_REVERSAL
	calla	DO_REVERSAL_MESS

	;target WHOHITME -- don't hit anyone else
	SMRTTGT	a8,WHOHITME

	;immobilize WHOHITME
	move	*a8(WHOHITME),a0,L
	jruc	ogtuis_reversal

ogtuslam
	move	*a8(IMMOBILIZE_TIME),a14
	jrnz	ogtulp0				;ignore

	movi	42,a10
	CREATE	MESSAGE_PID,BONUS_MESS

	;target WHOIHIT -- don't hit anyone else
	SMRTTGT	a8,WHOIHIT

	;immobilize WHOIHIT
	move	*a8(WHOIHIT),a0,L

ogtuis_reversal
	movk	15,a14
	move	a14,*a0(IMMOBILIZE_TIME)

	CALLA	FIND_AND_KILL_ENDLESS

	movi	lex_vsuplex_anim,a0
	move	a0,*a8(SPECIAL_MOVE_ADDR),L
	WRSND	W_LUGER,FLYKICK_T1,FLYKICK_T2

	SLEEPK	20

	jruc	ogtulp

