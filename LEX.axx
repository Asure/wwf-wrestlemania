dysfXRUN_VAL	equ	LEX_XRUN
dysfZDRIFT_VAL	equ	LEX_ZDRIFT

mode_running

	move	*a13(RUN_TIME),a0		;Used for flying kick
	addk	1,a0
	move	a0,*a13(RUN_TIME)

	move	*a13(USR_VAR1),a0
	jrnz	dysfno_vel

	calla	bounce_off_ropes

	movi	dysfXRUN_VAL,a0
	move	*a13(MOVE_DIR),a14
	btst	PLAYER_RIGHT_BIT,a14
	jrnz	dysfpos
	neg	a0
dysfpos
	move	@hyper_speed_on,a14
	sll	a14,a0
	move	a0,*a13(OBJ_XVEL),L

dysfno_vel

	move	*a13(GETUP_TIME),a0		;delay b4 gaining control
	jrnz	dysfout_of_control

	move	*a13(ANIMODE),a0
	btst	MODE_UNINT_BIT,a0
	jrnz	dysfno_interrupt

	move	*a13(STICK_VAL_CUR),a0
	move	*a13(MOVE_DIR),a1
	or	a0,a1
	andi	MOVE_LEFT|MOVE_RIGHT,a1
	cmpi	MOVE_LEFT|MOVE_RIGHT,a1
	jrne	dysfcontinue_run

	;braking with stick.  abort run.

	SETMODE	NORMAL

dysfcontinue_run
dysfno_interrupt

	move	*a13(STICK_VAL_CUR),a0
	clr	a1

	movi	-dysfZDRIFT_VAL,a1
	btst	PLAYER_UP_BIT,a0
	jrnz	dysfsetvel

	movi	dysfZDRIFT_VAL,a1
	btst	PLAYER_DOWN_BIT,a0
	jrnz	dysfsetvel

	clr	a1
dysfsetvel
	move	a1,*a13(OBJ_ZVEL),L

;Delay reading buttons after just getting out of an out of control run
;so a mistaken move isn't fired off
	move	*a13(DELAY_BUTNS),a0
	jrnz	dysfout_of_control

	move	*a13(BUT_VAL_DOWN),a0
	andi	011111b,a0
	X32	a0
	addi	dysfaction_table,a0
	move	*a0,a0,L
	call	a0
