	move	a14,*a0(IMMOBILIZE_TIME)

	move	a1,*a8(SPECIAL_MOVE_ADDR),L
	CALLA	FIND_AND_KILL_ENDLESS

	WRSND	W_LUGER,FLYKICK_T1,FLYKICK_T2

	SLEEPK	20
	jruc	guyqlp

