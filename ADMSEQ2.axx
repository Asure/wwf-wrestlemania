	WL	3,A3DC3B+FR9
	.word	ANI_XFLIP

	WL	ANI_GOTO,adm_facedown_getup_anim


 SUBRP	onrvget_xvel


	move	*a13(FACING_DIR),a0

	move	*a13(OBJ_XVEL),a14,L
	jrnz	onrvmv

	;Wrestler not moving toward opponent

	movi	20000h,a1
	btst	PLAYER_RIGHT_BIT,a0
	jrnz	onrvsetxvel

	movi	-20000h,a1
	jruc	onrvsetxvel

onrvmv
	;Is wrestler backing away from opponent?
	move	*a13(FACING_DIR),a1
	btst	MOVE_LEFT_BIT,a1
	jrnz	onrvface_lft
	clr	a1
	move	a14,a14
	jrn	onrvsetxvel		;Wrestler was back pedaling
	jruc	onrvlunge
onrvface_lft
	clr	a1
	move	a14,a14
	jrnn	onrvsetxvel 		;Wrestler was back pedaling

onrvlunge
	;Will lunge kick forward
	movi	40000h,a1
	btst	PLAYER_RIGHT_BIT,a0
	jrnz	onrvsetxvel

	movi	-40000h,a1
onrvsetxvel
	move	a1,*a13(OBJ_XVEL),L
	rets



