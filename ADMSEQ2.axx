 SUBR	adm_facedown_getup_anim
	WL	4,A3GD2A+FR1
	WL	4,A3GD2A+FR2
	WL	4,A3GD2A+FR3
	WL	4,A3GD2A+FR4
	WL	ANI_CODE,ewzvchoose_dir
	WL	ANI_IFSTATUS2,ewzvgetup_in_2
ewzvgetup_in_4
	WL	4,A3GD4A+FR5
	WL	4,A3GD4A+FR6
	WL	4,A3GD4A+FR7
	WL	4,A3GD4A+FR8
	WL	ANI_GOTO,ewzvgetup_done
ewzvgetup_in_2
	WL	4,A3GD2A+FR5
	WL	4,A3GD2A+FR6
	WL	4,A3GD2A+FR7
	WL	4,A3GD2A+FR8
ewzvgetup_done
	.word	ANI_SETMODE,MODE_NORMAL
	.word	ANI_SETPLYRMODE,MODE_NORMAL
	.word	ANI_END



ewzvchoose_dir
	;facing dir is pretty much screwed at this point, so we'll re-
	;calculate it.  get the left or right bits from the B_FLIPH bit
	;in OBJ_CONTROL.  get the up or down bits from the facing_dir table.

	movi	MOVE_RIGHT,a1
	move	*a13(OBJ_CONTROL),a0
	btst	B_FLIPH,a0
	jrnz	ewzvrgt
	movi	MOVE_LEFT,a1
ewzvrgt
	ori	MOVE_DOWN,a1

	move	*a13(ANIMODE),a0
	andni	MODE_STATUS2,a0
	move	a0,*a13(ANIMODE)

	move	*a13(NEW_FACING_DIR),a0
	btst	PLAYER_UP_BIT,a0
	jrz	ewzvcd_done

	move	*a13(ANIMODE),a0
	ori	MODE_STATUS2,a0
	move	a0,*a13(ANIMODE)

	andni	MOVE_DOWN,a1
	ori	MOVE_UP,a1
ewzvcd_done
	move	a1,*a13(FACING_DIR)
	rets




