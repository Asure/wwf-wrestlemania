	WL	7,A3DC3B+FR5

	.word	ANI_ATTACK_ON, AMODE_FLYKICK,90,90,67,37 ;mode,x,y,w,h
	WL	7,A3DC3B+FR6
	.word	ANI_ATTACK_OFF

	WL	6,A3DC3B+FR7
	WL	3,A3DC3B+FR8
	.word	ANI_WAITHITGND
	.word	ANI_ZEROVELS
