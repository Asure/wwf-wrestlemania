	move	a14,*a13(ANIPC),L

	;wobble the ropes
	movk	ROPE_RIGHT,a0
	btst	MOVE_RIGHT_BIT,a1
	jrnz	dwivok0
	movk	ROPE_LEFT,a0
dwivok0
	movk	ROPE_BOUNCEIO,a1
	calla	rope_command
	movi	03Ch,a0
	calla	triple_sound

