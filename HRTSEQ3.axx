 SUBRP	dwivset_zvel

	calla	get_opp_process
	move	*a13(OBJ_XPOSINT),a1
	move	*a0(OBJ_XPOSINT),a14
	sub	a14,a1
	abs	a1			;X dist (ABS)
	movi	10000h/7,a14		;divide by 7
	mpyu	a14,a1
	srl	16,a1			;a1 = ticks

	move	*a0(OBJ_ZPOSINT),a3
	move	*a13(OBJ_ZPOSINT),a14
	sub	a14,a3			;Z dist
	divs	a1,a3

	sll	16,a3
	move	a3,*a13(OBJ_ZVEL),L

	rets

 SUBRP	dwivrope_check

