RE_WAVEDONE	equ	2
RE_ABORT	equ	3
RE_BACKUP	equ	4


	.ref	robo_icon_trigger
	.ref	p1icon_total
	.ref	p2icon_total


 SUBR	robo_check

	.if DEBUG
	jruc	hkltrobo_ok
	.endif
	jruc	hkltrobo_end

	move	@p1icon_total,a0,L
	move	@robo_icon_trigger,a14
	cmp	a0,a14
	jrle	hkltrobo_ok
	move	@p2icon_total,a0,L
	cmp	a0,a14
	jrgt	hkltrobo_end
hkltrobo_ok
	sll	1,a14
	move	a14,@robo_icon_trigger
	callr	reset_roboscore
	callr	robo_sound_init


	clr	a0
hkltrobo_loop
	JSRP	robo_game
	move	@robo_end,a14
	cmpi	RE_DEADPLAYER,a14
	jreq	hkltplayer_died
	cmpi	RE_WAVEDONE,a14
	jreq	hkltwave_successful
	cmpi	RE_ABORT,a14
	jreq	hkltwave_aborted
	cmpi	RE_BACKUP,a14
	jreq	hkltback_up
	jruc	hkltrobo_end

hkltplayer_died
	jruc	hkltrobo_loop

hkltwave_successful
	inc	a0
	cmpi	16,a0
	jrne	hkltrobo_loop
	jruc	hkltrobo_end

hkltwave_aborted
	jruc	hkltrobo_end

hkltback_up
	dec	a0
	jrnn	hkltrobo_loop
	clr	a0
	jruc	hkltrobo_loop

hkltrobo_end
	RETP



 SUBRP	reset_roboscore

	clr	a14
	move	a14,@robotron_score,L
	rets



 SUBR	robo_game

	sla	4,a0
	move	a0,@robo_wave,W

	calla	display_blank
	calla	WIPEOUT			;CLEAN SYSTEM OUT

	clr	a0
	move	a0,@HALT
	move	a0,@dtype		;2d mode
	move	a0,@IRQSKYE
	move	a0,@CCCCount

	movk	1,a0			;page flipping on
	move	a0,@dpageflip

	SLEEPK	1

	movi	SCRNEND,a0		;[256,405]
	move	a0,@SCRNLR,L

	clr	a0
	move	a0,@WORLDTLX,L
	move	a0,@WORLDTLY,L

	SLEEPK	2

	calla	nosounds		;kill the select music

	;draw the frame
	move	@robo_wave,a0
	addi	voxpborder_colors,a0
	move	*a0,a0,W
	callr	draw_frame

	movk	1,a0
	move	a0,@DISPLAYON

	SLEEPK	2

	clr	a14
	move	a14,@player_dead,W	;clear the done flag

	;initialize the robo palette color cycles
	callr	robo_pal_cycles

	;initialize the badguy count
	clr	a14
	move	a14,@live_badguys,W

	;place the wave count
	callr	wave_count

	;create the score monitor
	CREATE	ROBOSCORE_PID,score

	;set up the player object
	CREATE	ROBOMAN_PID,our_hero		;start the little guy up
	CREATE	PLYRGUN_PID,player_gun	;give him a weapon
	move	a0,@gun_proc,L		;save the address

	;set up some grunts
	move	@robo_wave,a0
	addi	voxpwave_grunts,a0
	move	*a0,a0,W
	move	@robo_wave,a2
	addi	voxpgrunt_speeds,a2
	move	*a2,a2,W
	callr	make_grunts

	;make some hulks
	move	@robo_wave,a0
	addi	voxpwave_hulks,a0
	move	*a0,a0,W
	callr	make_hulks

	;sphereoids
	move	@robo_wave,a0
	addi	voxpwave_sphereoids,a0
	move	*a0,a0,W
	callr	make_sphereoids

	;quarks
	move	@robo_wave,a0
	addi	voxpwave_quarks,a0
	move	*a0,a0,W
	callr	make_quarks

	;make a few posts
	move	@robo_wave,a0
	addi	voxpwave_posts,a0
	move	*a0,a0,W

	move	@robo_wave,a1
	addi	voxppost_types,a1
	move	*a1,a1,W

	move	@robo_wave,a2
	addi	voxppost_colors,a2
	move	*a2,a2,W

	callr	make_posts

	;and some people
	move	@robo_wave,a0
	move	a0,a1
	move	a0,a2
	addi	voxpwave_moms,a0
	addi	voxpwave_dads,a1	
	addi	voxpwave_kids,a2
	move	*a0,a0,W
	move	*a1,a1,W
	move	*a2,a2,W
	callr	make_humans

	;start the collision checker
	CREATE	COLL_PID,collisions

	;create the both-start-btn watcher
	clr	a0
	move	a0,@starts_down,W
	move	a0,@forward,W
	move	a0,@backward,W
	CREATE	MISC_PID,watch_both_starts

	.if	WAVE_CONTROL
	CREATE	MISC_PID,wave_mover
	.endif

	.if DEBUG
	.if BOG_MONITOR
	CREATE	MISC_PID,bog_o_meter
	.endif
	.endif

	calla	display_unblank

voxpnot_done
	SLEEPK	1
	move	@live_badguys,a14
	jrz	voxpwave_done

	move	@player_dead,a14
	jrnz	voxpdead_hero

	move	@starts_down,a14
	jrnz	voxpwave_abort

	move	@forward,a14
	jrnz	voxpwave_done

	move	@backward,a14
	jrnz	voxpback_up
	jruc	voxpnot_done


voxpwave_done
	movi	RE_WAVEDONE,a14
	jruc	voxpquit
voxpdead_hero
	movi	RE_DEADPLAYER,a14
	jruc	voxpquit
voxpwave_abort
	movi	RE_ABORT,a14
	jruc	voxpquit

voxpback_up
	movi	RE_BACKUP,a14
	jruc	voxpquit

voxpquit
	move	a14,@robo_end,W

	;put the wave back in a0 just like we found it
	move	@robo_wave,a0,W
	sra	4,a0
	RETP


