	;bounds check
 SUBRP	pzxndo_bounds_check
	clr	a1

	clr	a0
	move	*a8(OXPOS),a0,W
	cmpi	pzxnlow_x,a0
	jrlt	pzxntoo_left
	cmpi	pzxnhigh_x,a0
	jrgt	pzxntoo_right
	jruc	pzxnvert_check

pzxntoo_left
	movi	pzxnlow_x,a14
	move	a14,*A8(OXPOS),W
	ori	M_HIT_LEFT,a1
	jruc	pzxnvert_check

pzxntoo_right
	movi	pzxnhigh_x,a14
	move	a14,*A8(OXPOS),W
	ori	M_HIT_RIGHT,a1

pzxnvert_check
	clr	a0
	move	*a8(OYPOS),a0,W
	cmpi	pzxnlow_y,a0
	jrlt	pzxntoo_high
	cmpi	pzxnhigh_y,a0
	jrgt	pzxntoo_low
	jruc	pzxndone_boundcheck

pzxntoo_high
	movi	pzxnlow_y,a14
	move	a14,*A8(OYPOS),W
	ori	M_HIT_TOP,a1
	jruc	pzxndone_boundcheck

pzxntoo_low
	movi	pzxnhigh_y,a14
	move	a14,*A8(OYPOS),W
	ori	M_HIT_BOTTOM,a1
	jruc	pzxndone_boundcheck

pzxndone_boundcheck
