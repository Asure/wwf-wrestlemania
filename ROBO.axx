	movi	stspmin_y,a0
	move	a0,*a8(OYPOS),W

stspnot_lowy
	cmpi	stspmax_y,a0
	jrle	stspnot_highy

	;high y
	inc	a1
	movi	stspmax_y,a0
	move	a0,*a8(OYPOS),W

stspnot_highy
	move	a1,a0
	rets



 SUBRP	stsprand_dirchange

	;1 chance in stspdirchange_chance of spontaneously switching direction
	movi	stspdirchange_chance,a0
	calla	RNDRNG0
	move	a0,a0
	jrnz	stspdirchange_done
	movi	7,a0
	calla	RNDRNG0
	inc	a0
	move	a0,a10

stspdirchange_done
	rets



 SUBRP	stspreverse_direction

	;reverse direction of motion
	subi	4,a10
	jrp	stsprd_done
	addi	8,a10
stsprd_done
	rets


 SUBRP	stspadvance_frame

	;advance the frame and set the new image
	inc	a11
	cmpi	4,a11
	jrne	stspno_wrap
	;wraparound.  reset to start
	clr	a11

stspno_wrap
	;calculate the next frame
	move	a9,a0
	move	a10,a1
	sla	4,a1		;mult by 10h
	addi	stspmotion_table,a1

	;a1 now points to one of the entries in stspmotion table
	move	*a1,a1,W
	add	a1,a0

	;a0 now points to an entry in stspxxx_table
	move	a11,a1
	X32	a1		;mult by 20h
	add	a1,a0
	move	*a0,a0,L

	calla	civanic

	rets



