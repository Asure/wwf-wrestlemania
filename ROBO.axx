	;reg use
	; a4  - current position in animation script
	; a5  - head of current animation script
	; a6  - tail of current animation script
	; a8  - player object
	; a9  - motion count accumulator
	; a10 - direction of motion

 SUBRP	our_hero

	;create the player object
	movi	[xljkstart_x,0],a0
	movi	[xljkstart_y,0],a1
	movi	man_d1,a2
	clr	a3
	movi	DMAWNZ,a4
	movi	CLSPLYR|TYPPLYR,a5
	clr	a6
	clr	a7
	calla	BEGINOBJW

	;set the global pointer
	move	a8,@player_object,L

	; initiailize direction of motion
	clr	a10

xljknot_done
	PUSHP	a4,a5,a6
	SLEEPK	1
	PULLP	a4,a5,a6

	; move him first
	callr	xljkmove_player

	; change his animation frame, if neccesary
	callr	xljkchange_frame

	jruc	xljknot_done

xljkplayer_dead
	;kill the gun process
	move	@gun_proc,a0,L
	calla	KILL

	movi	BULLET_PID,a0
	calla	KIL1C

	movi	GRUNT_PID,a0
	calla	KIL1C

	movi	HULK_PID,a0
	calla	KIL1C

	movi	HUMAN_PID,a0
	calla	KIL1C

	movi	SPHEREOID_PID,a0
	calla	KIL1C

	movi	ENFORCER_PID,a0
	calla	KIL1C

	movi	SPARK_PID,a0
	calla	KIL1C

	movi	QUARK_PID,a0
	calla	KIL1C

	movi	TANK_PID,a0
	calla	KIL1C

	movi	SHELL_PID,a0
	calla	KIL1C

	calla	STOPOBJS

	;switch frames
	movi	robo_dead,a0,L
	calla	civanic

	;death sound
	movi	RS_DIE,a0
	calla	robo_sound

	SLEEP	120
	movk	1,a14
	move	a14,@player_dead,W

	DIE


 SUBRP	xljkmove_player

	clr	a0
	calla	get_stick_val_cur
	btst	JOYDN,a0
	jrnz	xljkmove_down
	btst	JOYUP,a0
	jrnz	xljkmove_up
	btst	JOYRGT,a0
	jrnz	xljkmove_right
	btst	JOYLFT,a0
	jrnz	xljkmove_left
	jruc	xljkno_move

xljkmove_down
	btst	JOYRGT,a0
	jrnz	xljkmove_downright
	btst	JOYLFT,a0
	jrnz	xljkmove_downleft

	;increment Y
	move	*a8(OYPOS),a14,W
	inc	a14
	move	a14,*a8(OYPOS),W
	jruc	xljkmove_done

xljkmove_up
	btst	JOYRGT,a0
	jrnz	xljkmove_upright
	btst	JOYLFT,a0
	jrnz	xljkmove_upleft

	;decrement Y
	move	*a8(OYPOS),a14,W
	dec	a14
	move	a14,*a8(OYPOS),W
	jruc	xljkmove_done

xljkmove_right
	;increment X
	move	*a8(OXPOS),a14,W
	inc	a14
	move	a14,*a8(OXPOS),W
	jruc	xljkmove_done

xljkmove_left
	;decrement X
	move	*a8(OXPOS),a14,W
	dec	a14
	move	a14,*a8(OXPOS),W
	jruc	xljkmove_done

xljkmove_upright
	; decrement Y and increment X
	move	*a8(OYPOS),a14,W
	dec	a14
	move	a14,*a8(OYPOS),W
	move	*a8(OXPOS),a14,W
	inc	a14
	move	a14,*a8(OXPOS),W
	jruc	xljkmove_done

xljkmove_upleft
	; decrement Y and decrement X
	move	*a8(OYPOS),a14,W
	dec	a14
	move	a14,*a8(OYPOS),W
	move	*a8(OXPOS),a14,W
	dec	a14
	move	a14,*a8(OXPOS),W
	jruc	xljkmove_done

xljkmove_downright
	; increment Y and increment X
	move	*a8(OYPOS),a14,W
	inc	a14
	move	a14,*a8(OYPOS),W
	move	*a8(OXPOS),a14,W
	inc	a14
	move	a14,*a8(OXPOS),W
	jruc	xljkmove_done

xljkmove_downleft
	; increment Y and decrement X
	move	*a8(OYPOS),a14,W
	inc	a14
	move	a14,*a8(OYPOS),W
	move	*a8(OXPOS),a14,W
	dec	a14
	move	a14,*a8(OXPOS),W
	jruc	xljkmove_done

xljkmove_done
	; check bounds
	move	*a8(OXPOS),a14,W
	cmpi	xljklow_x,a14,W
	jrgt	xljknot_lowx
	; too low on x
	inc	a14
	move	a14,*a8(OXPOS),W

xljknot_lowx
	cmpi	xljkhigh_x,a14,W
	jrle	xljknot_highx
	; too high on x
	dec	a14
	move	a14,*a8(OXPOS),W

xljknot_highx

	move	*a8(OYPOS),a14,W
	cmpi	xljklow_y,a14,W
	jrgt	xljknot_lowy
	; too low on y
	inc	a14
	move	a14,*a8(OYPOS),W

xljknot_lowy
	cmpi	xljkhigh_y,a14,W
	jrle	xljknot_highy
	; too high on y
	dec	a14
	move	a14,*a8(OYPOS),W

xljknot_highy
xljkno_move

xljkdone_moving
	rets



 SUBRP	xljkchange_frame
	;reg use
	; a0  scratch
	; a1  sctatch
	; a3  new direction of motion
	; a10 old direction of motion - update

	clr	a0
	clr	a2
	calla	get_stick_val_cur
	move	a0,a3

	cmp	a0,a10
	jreq	xljksame_direction
	jruc	xljknew_direction

xljknew_direction
	; start a new script.  first use the joystick bits to compute an
	; offset into the script table.
	X32	a0		;multiply by 32
	addi	xljkscript_map,a0	;add the address of the script table
	move	*a0,a0,L	;get the address of the script

	; get the tail and head of the image list for this script
	move	*a0+,a6,L
	move	a0,a5

	;a5 now points to the first image in the script.  change to it.
	move	*a5,a0,L
	calla	civanic

	;set the new direction thingie and script pointer
	move	a3,a10
	move	a5,a4

	;set the motion count
	movi	xljkmotion_count,a9
	jruc	xljkdone_changing

xljksame_direction
	;check the motion count
	dec	a9
	jrnz	xljkdone_changing

	;reset the motion count
	movi	xljkmotion_count,a9

	;increment the pointer, wrap if neccesary
	addi	20h,a4
	cmp	a4,a6
	jrne	xljkno_wrap
	move	a5,a4

xljkno_wrap
	;a4 is the new image.  change to it.
	move	*a4,a0,L
	calla	civanic

	jruc	xljkdone_changing

xljkdone_changing
	rets



 SUBR	player_die
	PUSH	a1,a7

	;we hit some kind of bad guy and are dead
	movi	CLSDEAD,a14
	move	a14,*a8(OID),W
	move	*a8(OPLINK),a0,L
	movi	DEADPLAYER_PID,a1
	movi	xljkplayer_dead,a7
	calla	XFERPROC

	PULL	a1,a7
	rets



