pzxnchange_direction
	;turn 90 degrees by randomly incrementing or decrementing direction
	movi	1,a0
	PUSH	a1
	calla	RNDRNG0
	PULL	a1
	move	a0,a0
	jrz	pzxninc_direction
	dec	a11
	jruc	pzxndir_rangecheck
	
pzxninc_direction
	inc	a11

pzxndir_rangecheck
	cmpi	-1,a11
	jrne	pzxndir_notlow
	movi	3,a11

pzxndir_notlow
	cmpi	4,a11
	jrne	pzxndir_changed
	clr	a11

pzxndir_changed

	;verify that this is a good direction
	cmpi	0,a11
	jreq	pzxnvalidate_up
	cmpi	1,a11
	jreq	pzxnvalidate_right
	cmpi	2,a11
	jreq	pzxnvalidate_down
	cmpi	3,a11
