	move	*a8(OXPOS),a0,W
	add	a14,a0
	move	a0,*a8(OXPOS),W

	clr	a1
	move	*a8(OXPOS),a0,W

	cmpi	stspmin_x,a0
	jrge	stspnot_lowx

	;low x
	inc	a1
	movi	stspmin_x,a0
	move	a0,*a8(OXPOS),W

stspnot_lowx
	cmpi	stspmax_x,a0
	jrle	stspnot_highx

