	;reg use
	;a9  time till next shot is allowed

 SUBRP	player_gun

	clr	a9
	jruc	vguzsleep

vguzcheck_shot
	movk	1,a0
	calla	get_stick_val_cur
	jrz	vguzsleep			;no shot

	;fire in the indicated direction
	move	a0,a10
	CREATE	BULLET_PID,bullet
	movi	vguzrate_of_fire,a9

	;shoot sound
	movi	RS_SHOOT,a0
	callr	robo_sound

	jruc	vguzsleep
	
vguztoo_soon
	dec	a9
	jruc	vguzsleep

vguzsleep
	SLEEPK	1
	move	a9,a9
	jrnz	vguztoo_soon
	jruc	vguzcheck_shot

vguzdone
	DIE

vguzrate_of_fire	equ	6	;min ticks between shots



	;reg use
	; a4 velocity accumulator (used to pick the correct bullet)
	; a5 vert indicator
	; a8 bullet object
	;a10 (in) stick bits

 SUBRP	bullet

	;create a bullet object
	movi	[500,0],a0
	clr	a1
	movi	bullet_hrz,a2
	clr	a3
	movi	DMAWNZ,a4
	movi	CLSPLYR|TYPBULLET,a5
	clr	a6
	clr	a7
	calla	BEGINOBJW

	;set the speed and start position
	move	@player_object,a9,L
	clr	a4
	clr	a5
	move	*a9(OXPOS),a0,W
	addk	vncebstart_xoff,a0
	move	a0,*a8(OXPOS),W
	move	*a9(OYPOS),a0,W
	addk	vncebstart_yoff,a0
	move	a0,*a8(OYPOS),W

	btst	JOYRGT,a10
	jrz	vncenot_right
	move	*a8(OXPOS),a14,W	;pos
	addi	vncebstart_radj,a14
	move	a14,*a8(OXPOS),W
	movi	vncebullet_speed,a0	;speed
	move	a0,*a8(OXVEL),L
	inc	a4

vncenot_right

	btst	JOYLFT,a10
	jrz	vncenot_left
	move	*a8(OXPOS),a14,W	;pos
	addi	vncebstart_ladj,a14
	move	a14,*a8(OXPOS),W
	movi	-vncebullet_speed,a0	;speed
	move	a0,*a8(OXVEL),L
	dec	a4

vncenot_left

