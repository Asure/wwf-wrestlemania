	jruc	pzxnvalid_dir
pzxnvalidate_right
	andi	M_HIT_RIGHT,a1
	jrnz	pzxnchange_direction
	jruc	pzxnvalid_dir
pzxnvalidate_down
	andi	M_HIT_BOTTOM,a1
	jrnz	pzxnchange_direction
	jruc	pzxnvalid_dir
pzxnvalidate_left
	andi	M_HIT_LEFT,a1
	jrnz	pzxnchange_direction
	jruc	pzxnvalid_dir

pzxnvalid_dir

	move	a11,a0
	X32	a0
	addi	pzxnanim_list,a0
	move	*a0,a0,L
	move	a0,*a13(pzxnPD_SCRIPT),L

pzxndone_moving
	
pzxnnew_frame
