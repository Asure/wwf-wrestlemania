 SUBRP	bounds_check
	PUSH	a1,a3
	clr	a0
	clr	a2
	clr	a3

	;check for hit top
	move	*a8(OYPOS),a1
	move	*a8(ODYOFF),a14
	sub	a14,a1
	cmpi	tqehlow_y,a1
	jrgt	tqehnot_high
	movi	tqehlow_y,a2
	sub	a1,a2
	ori	M_HIT_TOP,a0
	jruc	tqehnot_low		;assume won't be both high and low

tqehnot_high
	;check for hit bottom
	move	*a8(ODYOFF),a14		;subtract the offset AGAIN because
	sub	a14,a1			; we assume the anim point is there
	move	*a8(OSIZEY),a14		; to center the object.
	add	a14,a1
	cmpi	tqehhigh_y,a1
	jrlt	tqehnot_low
	move	a1,a2
	subi	tqehhigh_y,a2
	ori	M_HIT_BOTTOM,a0

tqehnot_low
	;check for hit left
	move	*a8(OXPOS),a1
	move	*a8(ODXOFF),a14
	sub	a14,a1
	cmpi	tqehlow_x,a1
	jrgt	tqehnot_left
	movi	tqehlow_x,a3
	sub	a1,a3
	ori	M_HIT_LEFT,a0
	jruc	tqehdone			;assume won't be both right and left

tqehnot_left
	move	*a8(ODXOFF),a14
	sub	a14,a1
	move	*a8(OSIZEX),a14
	add	a14,a1
	cmpi	tqehhigh_x,a1
	jrlt	tqehdone
	move	a1,a3
	subi	tqehhigh_x,a3
	ori	M_HIT_RIGHT,a0

tqehdone
	;a2 is y overlap, a3 is x overlap.  a2 should be greatest of the two.
	cmp	a2,a3
	jrn	tqehretval_set
	move	a3,a2
tqehretval_set
	PULL	a1,a3
	rets


