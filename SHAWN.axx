******************************************************************************
 SUBRP	shn_finish_move1

baxnTIMEOUT	.equ	TSEC

baxnend_wait
	SLEEP		TSEC/4
	move		@p1rounds,a0			; Get player 1 rounds
	move		@p2rounds,a1			; Get player 2 rounds
	or		a1,a0				; Put em together
	cmpi		2,a0				; Anybody got 2?
	jrlt		baxnend_wait			; br = no

baxnreset
	clr		a11
	move		a11,@in_finish_move
	SLEEPK		1
	WAITSWITCH_DWN	J_UP,0,baxnreset
	movi		baxnTIMEOUT,a11
	move		a11,@in_finish_move
	WAITSWITCH_DWN	J_DOWN,0,baxnreset
	WAITSWITCH_DWN	J_TOWARD,J_DOWN|J_UP,baxnreset
	WAITSWITCH_DWN	J_TOWARD,J_DOWN|J_UP,baxnreset
	WAITSWITCH_DWN	B_PUNCH,J_ALL,baxnreset

	movi		shn_finish1_move,a0
	move		a0,*a8(SPECIAL_MOVE_ADDR),L
	DIE
	.endif
	

