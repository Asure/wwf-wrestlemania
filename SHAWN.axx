	calla	change_anim1a
	rets

wlsaok2a
	move	*a13(CLOSEST_XDIST),a1
	cmpi	90,a1
	jrgt	wlsastd_grab

	movi	shn_3_head_hold2_anim,a0
	calla	change_anim1a
wlsaout	rets

wlsastd_grab
	movi	shn_3_head_hold_anim,a0
	calla	change_anim1a
	rets

