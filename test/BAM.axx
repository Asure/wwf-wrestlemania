;	STRUCTPD
;	WORD		tvoyCHARGE_TIME	;UDW
tvoyCHARGE_TIME	.equ	SM_USRW1

bam_charge_neckbreaker

tvoystart_over
	clr	a14
	move	a14,*a13(tvoyCHARGE_TIME),W
tvoyloop1
	SLEEPK	1

	move	*a13(tvoyCHARGE_TIME),a14,W
	inc	a14
	move	a14,*a13(tvoyCHARGE_TIME),W

	move	*a8(BUT_VAL_CUR),a0
	btst	PLAYER_SPUNCH_BIT,a0
	jrz	tvoyp1

	jruc	tvoyloop1

tvoyp1

;no longer holding button
	move	*a13(tvoyCHARGE_TIME),a14
	cmpi	100,a14
	jrlt	tvoystart_over

;Success!  Check for the UNINT bit, then queue it up.
	move	*a8(ANIMODE),a14
	btst	MODE_UNINT_BIT,a14
	jrnz	tvoystart_over

	move	*a8(GETUP_TIME),a0
	jrnz	tvoystart_over

	move	*a8(PLYRMODE),a0
	cmpi	MODE_HEADHELD,a0
	jrz	tvoystart_over
	cmpi	MODE_HEADHOLD,a0
	jrz	tvoystart_over
	cmpi	MODE_ONGROUND,a0
	jrz	tvoystart_over
	cmpi	MODE_DEAD,a0
	jrz	tvoystart_over

	movi	bam_neckbreaker2_anim,a14

	move	*a8(PLYRMODE),a0
	cmpi	MODE_RUNNING,a0
	jrnz	tvoycont

	movi	bam_neckbreaker_run_anim,a14

tvoycont
	move	a14,*a8(SPECIAL_MOVE_ADDR),L

	WRSND	W_BAMBAM,GRABHOLD_T1,GRABHOLD_T2

	SLEEP	TSEC*3
	jruc	tvoystart_over
	
