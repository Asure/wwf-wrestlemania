dmkjneck_grab
	.word	B_SPUNCH,		J_ALL
	.word	J_TOWARD,		J_REAL_LR
	.word	J_TOWARD,		J_REAL_LR
	.word	8000h | 32		;max
	.long	dmkjscrt_neck

dmkjscrt_neck
	move	*a13(ANIMODE),a0
	btst	MODE_UNINT_BIT,a0
	jrnz	dmkjout

;Don't do it when he is on ground
	calla	get_opp_plyrmode
	cmpi	MODE_ONGROUND,a0
	jrz	dmkjout
	cmpi	MODE_DEAD,a0
	jrz	dmkjout
	cmpi	MODE_HEADHELD,a0
	jrz	dmkjout
;Mode held overhead!
	cmpi	MODE_ATTACHED,a0
	jrz	dmkjout

	move	*a13(LAST_HEADHOLD),a14,L
	move	@PCNT,a0,L
	sub	a14,a0
	cmpi	2*60,a0
	jrge	dmkjok2

;This head grab is too close (in terms of time) to most recent grab
	.ref	bam_3_fake_hold_anim
	movi	bam_3_fake_hold_anim,a0
	calla	change_anim1a
	rets

dmkjok2
	move	*a13(CLOSEST_XDIST),a1
	cmpi	100,a1
	jrgt	dmkjstd_grab

	movi	bam_3_head_hold2_anim,a0
	calla	change_anim1a

	rets

dmkjstd_grab
	movi	bam_3_head_hold_anim,a0
	calla	change_anim1a

	rets

