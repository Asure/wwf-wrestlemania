bam_hdhold_pogo

gmjhTIMEOUT	.equ	60

gmjhlp0
	SLEEPK	1
gmjhlp
	move	*a8(PLYRMODE),a0
	cmpi	MODE_HEADHOLD,a0
	jrz	gmjhcont
	cmpi	MODE_HEADHELD,a0
	jrnz	gmjhlp0
gmjhcont
	clr	a11

;	WAITSWITCH_DWN	J_UP,0,gmjhlp
	WAITSWITCH_DWN	J_DOWN,0,gmjhlp

	movi	gmjhTIMEOUT,a11

	WAITSWITCH_DWN	J_DOWN,0,gmjhlp
	WAITSWITCH_DWN	B_SKICK,J_ALL,gmjhlp

	move	*a8(PLYRMODE),a0
	cmpi	MODE_HEADHOLD,a0
	jrz	gmjhslam
	cmpi	MODE_HEADHELD,a0
	jrnz	gmjhlp0
	move	*a8(I_WILL_DIE),A14
	jrnz	gmjhlp0

	move	*a8(IMMOBILIZE_TIME),a14
	jrnz	gmjhlp0				;ignore

	CALLA	DO_REVERSAL
	CALLA	DO_REVERSAL_MESS

	;target WHOHITME -- don't hit anyone else
	SMRTTGT	a8,WHOHITME

	;immobilize WHOHITME
	move	*a8(WHOHITME),a0,L
	jruc	gmjhis_reversal

gmjhslam
	move	*a8(IMMOBILIZE_TIME),a14
	jrnz	gmjhlp0				;ignore
	movk	31,a10
	CREATE	MESSAGE_PID,BONUS_MESS

	;target WHOIHIT -- don't hit anyone else
	SMRTTGT	a8,WHOIHIT

	;immobilize WHOIHIT
	move	*a8(WHOIHIT),a0,L

gmjhis_reversal
	movk	15,a14
	move	a14,*a0(IMMOBILIZE_TIME)

	CALLA	FIND_AND_KILL_ENDLESS

	movi	bam_pogo_anim,a14
	move	a14,*a8(SPECIAL_MOVE_ADDR),L
	WRSND	W_BAMBAM,GRABHOLD_T1,GRABHOLD_T2

	SLEEPK	20

	jruc	gmjhlp

