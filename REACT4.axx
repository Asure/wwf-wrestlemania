	.long	0,0							;9 Referee

 SUBR	hit_cline


	move	*a13(PLYRMODE),a1
	cmpi	MODE_BLOCK,a1
	jrnz	ktkunoblock

	calla	block_hit_flail
	rets

ktkunoblock

	calla	CALL_DROP_KICK


	WRSNDX	FLYKICK_L1,FLYKICK_L2

	GETLIFE
	jrz	ktkuskip



	SETMODE	NORMAL

ktkuskip

	clr	a0
	move	a0,*a10(OBJ_ZVEL),L	;Zero zvel after collis

