 SUBR	hit_stomp
 SUBR	hit_buttstomp

	;if we're standing, ignore this
	move	*a13(PLYRMODE),a0
	cmpi	MODE_NORMAL,a0

	jreq	zixamode_normal

	cmpi	MODE_BLOCK,a0
	jreq	zixamode_normal




	calla	wres_collis_off

	move	*a13(PLYRMODE),a0
	cmpi	MODE_ONGROUND,a0
	jrz	zixaon_grnd
	cmpi	MODE_DEAD,a0
	jrnz	zixaisdead

zixaon_grnd
	FACETBL hitonground_tbl
	calla	change_anim1a



	move	*a10(ANIBASE),a0,L
	cmpi	shn_combo_run_stomp_anim,a0
	jreq	zixado_unnormal_sounds
	cmpi	shn_run_stomp_anim,a0
	jrne	zixanormal_sounds
zixado_unnormal_sounds
	calla	DO_SCREAM
	jruc	zixaunnormal_sounds

zixanormal_sounds
	WRSNDX	LBOWDROP_L1,LBOWDROP_L2
	movi	43h,a0
	calla	triple_sound

zixaunnormal_sounds
	move	*a10(ANIBASE),a0,L

	cmpi	dnk_belly_anim,a0
	jreq	zixabounce

	cmpi	und_flying_butt_drop_anim,a0
	jreq	zixabounce

	cmpi	lex_flying_ground_punch_anim,a0
	jreq	zixabounce3


	jruc	zixaisdead

zixabounce2
	;REALLY NASTY HACK!  Watch out if you modify this in any way.
	callr	zixabounce
	movi	-10000h,a0
	move	a0,*a10(OBJ_ZVEL),L
	rets

zixabounce3
	;REALLY NASTY HACK!  Watch out if you modify this in any way.
	callr	zixabounce
	movi	40000h,a0
	move	a0,*a10(OBJ_YVEL),L
	rets

zixabounce
	movi	50000h,a0
	move	a0,*a10(OBJ_YVEL),L
	movi	10000h,a0
	move	a0,*a10(OBJ_ZVEL),L
	clr	a0
	move	a0,*a10(OBJ_XVEL),L

	.ref	shake_all_ropes
	calla	shake_all_ropes
	PUSH	a10
	movi	8,a10
	.ref	SHAKER2
	calla	SHAKER2
	PULL	a10

zixaisdead
	calla	wres_collis_off
	rets

zixamode_normal
	;OOPS!  Don't do any damage.
	clr	a14
	move	a14,@hit_damage_pending
	jruc	zixaisdead


 SUBR	hit_bstomp

	calla	DO_SCREAM
	calla	wres_collis_off

	move	*a13(PLYRMODE),a0
	cmpi	MODE_ONGROUND,a0
	jrz	zgbfon_grnd
	cmpi	MODE_DEAD,a0
	jrz	zgbfon_grnd


	calla	DO_SCREAM
	movi	43h,a0
	calla	triple_sound

	calla	set_getup_time

	SETMODE	NORMAL
	move	*a13(OBJ_YPOSINT),a14
	move	*a13(GROUND_Y),a0
	sub	a0,a14
	cmpi	20,a14
	jrge	zgbffall_back

zgbfkdwn
	FACETBL knockdwn
	calla	change_anim1a
	calla	wres_collis_off

	rets

zgbffall_back
	move	*a10(WRESTLERNUM),a0
	cmpi	5,a0
	jrz	zgbfkdwn
	FACETBL	fall_back_tbl

	calla	change_anim1a
	calla	wres_collis_off

	movi	[2,0],a2
	move	*a10(OBJ_XPOSINT),a0
	move	*a13(OBJ_XPOSINT),a1
	cmp	a0,a1			;offx - defx
	jrgt	zgbffall_right		;attacker on left
	neg	a2
zgbffall_right
	move	a2,*a13(OBJ_XVEL),L

	movi	-40000h,a0
	move	a0,*a13(OBJ_YVEL),L

	rets

zgbfon_grnd
	FACETBL hitonground_tbl
	calla	change_anim1a
zgbfisdead
	calla	wres_collis_off
	rets

knockdwn
	.ref	hrt_knockdwn_anim
	.ref	rzr_knockdwn_anim
	.ref	und_knockdwn_anim
	.ref	yok_knockdwn_anim
	.ref	shn_knockdwn_anim
	.ref	bam_knockdwn_anim
	.ref	dnk_knockdwn_anim
	.ref	lex_knockdwn_anim

	.long	hrt_knockdwn_anim		;0 Bret Hart
	.long	rzr_knockdwn_anim		;1 Razor Ramon
	.long	und_knockdwn_anim		;2 Undertaker
	.long	yok_knockdwn_anim		;3 Yokozuna
	.long	shn_knockdwn_anim		;4 Shawn Michaels
	.long	bam_knockdwn_anim		;5 Bam Bam
	.long	dnk_knockdwn_anim		;6 Doink
	.long	0				;7 spare
	.long	lex_knockdwn_anim		;8 Lex Luger
	.long	0				;9 Referee


 SUBR	hit_bstomp2

	move	*a13(PLYRMODE),a1
	cmpi	MODE_BLOCK,a1
	jrnz	zgbfnoblock

	calla	block_hit_flail
	rets

zgbfnoblock
	WRSNDX	FLYKICK_L1,FLYKICK_L2
	calla	wres_collis_off

	move	*a13(PLYRMODE),a0
	MOVE	*A10(COMBO_COUNT),A1
	JRNZ	NOT_NORMAL_CHECK
	cmpi	MODE_ONGROUND,a0
	jrz	zgbfisdead
	cmpi	MODE_DEAD,a0
	jrz	zgbfisdead
	JRUC	NORMAL_CHECK
NOT_NORMAL_CHECK
	move	*a13(OBJ_CONTROL),a0
	xori	M_FLIPH,a0
	move	a0,*a13(OBJ_CONTROL)
	CLR	A0
	MOVE	A0,*A13(OBJ_YVEL),L
	MOVE	*A13(GROUND_Y),*A13(OBJ_YPOSINT)
NORMAL_CHECK

	calla	set_getup_time

	calla	DO_SCREAM
	movi	43h,a0
	calla	triple_sound
	calla	CALL_NASTY_MOVE
	FACETBL knockdwn
	calla	change_anim1a
	calla	wres_collis_off
	rets

 SUBR	hit_hammer

	movi	45h,a0
	calla	triple_sound
	calla	CALL_NASTY_MOVE

	move	*a13(PLYRMODE),a1
	cmpi	MODE_BLOCK,a1
	jrnz	bwalnoblock

	calla	block_hit
	rets

bwalnoblock
	jruc	hit_bstomp

 SUBR	hit_spinkick


	move	*a13(PLYRMODE),a1
	cmpi	MODE_BLOCK,a1
	jrnz	aelknoblock

	calla	block_hit_flail
	rets

aelknoblock
	movi	43h,a0
	calla	triple_sound
	calla	CALL_AVERAGE_MOVE

	GETLIFE
	jrz	aelkisdead

	WRSNDX	KICK_L1,KICK_L2

	SETMODE	NORMAL
	move	*a13(OBJ_YPOSINT),a14
	move	*a13(GROUND_Y),a0
	sub	a0,a14
	cmpi	20,a14
	jrge	aelkfall_back


	FACE24TBL aelkhead_hit2
	calla	change_anim1a
aelkisdead
