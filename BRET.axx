	.long	mode_choking		;25

*****************************************************************************

mode_normal

	move	*a13(ANIMODE),a0
	btst	MODE_UNINT_BIT,a0
	jrnz	wupino_interrupt

	move	*a13(I_WILL_DIE),a0
	jrz	wupinope
	move	*a13(IMMOBILIZE_TIME),a0
	jrnz	wupinope
;Player has died amidst a combo...
;Knock me down.
	movi	hrt_fall_back_anim,a0
	calla	change_anim1a

;Zero health bar
	movi	-10,a0
	move	*a13(PLYRNUM),a1
	calla	adjust_health

	SETMODE	DEAD

	clr	a0
	move	a0,*a13(I_WILL_DIE)

	rets

wupinope
;Perhaps we need to interrupt any sequence when a wrestler has won?
	calla	get_opp_plyrmode
	cmpi	MODE_DEAD,a0
	jrne	wupiopp_not_dead

	;if closest is a zombie, skip pin section.
	calla	get_opp_process
	move	*a0(STATUS_FLAGS),a14
	btst	B_ZOMBIE,a14
	jrnz	wupiopp_not_dead
	
	;all opponents are dead.  Check for pins/raisearms

	;if we're attached to someone, don't interrupt it.
	move	*a13(ATTACH_PROC),a1,L
	jrz	wupino_attch
	move	*a1(ATTACH_PROC),a2,L
	cmp	a2,a13
	jreq	wupino_pin_yet
wupino_attch

	;if a teammate has pinned, raise yer arm.
	calla	ck_teammate_pin	
	jrc	wupiraisearm

	;nobody has pinned.  if we're outside or all our opponents are
	; outside, do a raisearm.
	calla	raisearm_check
	jrc	wupiraisearm

	;we're inside with a pinnable opponent.  any button pins.
	move	*a13(BUT_VAL_CUR),a0
	jrz	wupino_pin_yet

	;we have a press -- make sure opponent is on the ground
	calla	can_pin
	jrnc	wupiopp_notgnd

	;opponent is on the ground.  pin him.
	FACE24	hrt,pin_anim
	calla	change_anim1a

	;set the 'I did a pin' flag.
	move	*a13(STATUS_FLAGS),a14
	ori	M_DID_PIN,a14
	move	a14,*a13(STATUS_FLAGS)

	;if we're a temp drone for auto-pin purposes, turn back into
	; a normal player here.
	calla	drone_change_back

	rets

wupiraisearm
	FACE24	hrt,raise_arm_anim
	calla	change_anim1a
	calla	set_raisearm_bit

	;if we're a temp drone for auto-pin purposes, turn back into
	; a normal player here.
	calla	drone_change_back

	rets

wupitoo_far_to_pin
wupiopp_notgnd
wupiopp_not_dead
wupino_pin_yet

	move	*a13(IMMOBILIZE_TIME),a0
	jrnz	wupiimmobilized

	move	*a13(BUT_VAL_CUR),a0
	btst	PLAYER_BLOCK_BIT,a0	;maybe have to action tables?
	jrz	wupinblk			;1 for down transitions
	callr	wupiblock			;& 1 for current buttons
	jrc	wupinblk
	clr	a0
	move	a0,*a13(ATTACK_TYPE)
	rets
wupinblk
	move	*a13(BUT_VAL_CUR),a0
	andi	011111b,a0
	cmpi	PLAYER_PUNCH_VAL|PLAYER_KICK_VAL,a0
	jrz	wupipunchkick

	move	*a13(BUT_VAL_DOWN),a0
	andi	011111b,a0
	X32	a0
	addi	wupiaction_table,a0
	move	*a0,a0,L
	call	a0

	move	*a13(ANIMODE),a0
	btst	MODE_UNINT_BIT,a0
	jrnz	wupino_interrupt


	move	*a13(STICK_VAL_CUR),a0
	move	a0,*a13(MOVE_DIR)
	calla	climb_turnbuckle
	jrnc	wupino_climb
	move	*a13(WRESTLERNUM),A5
	MOVI	CLIMB_ROPES,A2
	MOVI	1000,A0
	CALLA	ADD_IF_SILENT
	rets

wupiimmobilized
	clr	a14
	move	a14,*a13(MOVE_DIR)
wupino_climb
	calla	execute_walk

wupino_interrupt
	rets

wupiaction_table
	.long	wupiz,wupipunch,wupiblock,wupiblock			;0-3
	.long	wupisuper_punch,wupisuper_punch,wupiblock,wupiblock	;4-7
	.long	wupikick,wupipunchkick,wupiblock,wupiblock		;8-11
	.long	wupisuper_punch,wupipunchkick,wupiblock,wupiblock	;12-15
	.long	wupisuper_kick,wupisuper_kick,wupiblock,wupiblock	;16-19
	.long	wupigraboh,wupigraboh,wupiblock,wupiblock		;20-23
	.long	wupisuper_kick,wupipunchkick,wupiblock,wupiblock	;24-27
	.long	wupigraboh,wupigraboh,wupiblock,wupiblock		;28-31

