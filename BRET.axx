mode_running

	move	*a13(RUN_TIME),a0		;Used for flying kick
	addk	1,a0
	move	a0,*a13(RUN_TIME)

	move	*a13(USR_VAR1),a0
	jrnz	xewno_vel

	calla	bounce_off_ropes

	movi	xewXRUN_VAL,a0

	move	*a13(WALK_FAST),a14
	jrz	xewno
	movi	xewXRUN2_VAL,a0
xewno
	move	@hyper_speed_on,a14
	sll	a14,a0

