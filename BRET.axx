;	STRUCTPD
;	WORD		aduoCHARGE_TIME	;UDW
aduoCHARGE_TIME	.equ	SM_USRW1	;

hrt_charge_flying_kick

aduostart_over
	clr	a14
	move	a14,*a13(aduoCHARGE_TIME),W
aduoloop1
	SLEEPK	1

	move	*a13(aduoCHARGE_TIME),a14,W
	inc	a14
	move	a14,*a13(aduoCHARGE_TIME),W

	move	*a8(BUT_VAL_CUR),a0
	btst	PLAYER_SKICK_BIT,a0
	jrz	aduop1

	jruc	aduoloop1

aduop1

;no longer holding button
	move	*a13(aduoCHARGE_TIME),a14
	cmpi	100,a14
	jrlt	aduostart_over

	move	*a8(GETUP_TIME),a0
	jrnz	aduostart_over
	move	*a8(PLYRMODE),a0
	cmpi	MODE_HEADHELD,a0
	jrz	aduostart_over
	cmpi	MODE_HEADHOLD,a0
	jrz	aduostart_over
	cmpi	MODE_ONGROUND,a0
	jrz	aduostart_over
	cmpi	MODE_DEAD,a0
	jrz	aduostart_over

	move	*a8(CLOSEST_NUM),a0
	X32	a0
	addi	process_ptrs,a0
	move	*a0,a0,L
	move	*a0(PLYRMODE),a0
	cmpi	MODE_ONGROUND,a0
	jrz	aduostart_over
	cmpi	MODE_DEAD,a0
	jrz	aduostart_over

;Success!  Check for the UNINT bit, then queue it up.
	move	*a8(ANIMODE),a14
	btst	MODE_UNINT_BIT,a14
	jrnz	aduostart_over

	.ref	ck_ignore_a8
	calla	ck_ignore_a8
	jrc	aduostart_over

	movi	hrt_flying_kick_anim,a14
	move	a14,*a8(SPECIAL_MOVE_ADDR),L
	WRSND	W_BRET,FLYKICK_T1,FLYKICK_T2

	SETMODE	INAIR

	jruc	aduostart_over
	

