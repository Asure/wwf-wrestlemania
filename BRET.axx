	move	*a13(PLYRMODE),a0
	cmpi	MODE_RUNNING,a0
	jrz	fdjjleapddt

;If stick is toward opponent, then do sliding/leaping buzzer
	move	*a13(STICK_VAL_CUR),a0
	move	*a13(NEW_FACING_DIR),a1
