	.long	hresz,hrespunch,hresblock,hresblock			;0-3
	.long	hressuper_punch,hressuper_punch,hresblock,hresblock	;4-7
	.long	hreskick,hrespunchkick,hresblock,hresblock		;8-11
	.long	hressuper_punch,hrespunchkick,hresblock,hresblock	;12-15
	.long	hressuper_kick,hressuper_kick,hresblock,hresblock	;16-19
	.long	hresgraboh,hresgraboh,hresblock,hresblock		;20-23
