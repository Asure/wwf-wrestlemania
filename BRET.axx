yekvno
	move	@hyper_speed_on,a14
	sll	a14,a0

	move	*a13(MOVE_DIR),a14
	btst	PLAYER_RIGHT_BIT,a14
	jrnz	yekvpos
	neg	a0
yekvpos
	move	a0,*a13(OBJ_XVEL),L

yekvno_vel

	move	*a13(GETUP_TIME),a0		;delay b4 gaining control
	jrnz	yekvout_of_control

	move	*a13(ANIMODE),a0
	btst	MODE_UNINT_BIT,a0
	jrnz	yekvno_interrupt

	move	*a13(STICK_VAL_CUR),a0
	move	*a13(MOVE_DIR),a1
	or	a0,a1
	andi	MOVE_LEFT|MOVE_RIGHT,a1
	cmpi	MOVE_LEFT|MOVE_RIGHT,a1
	jrne	yekvcontinue_run

	;braking with stick.  abort run.

	SETMODE	NORMAL

yekvcontinue_run
yekvno_interrupt

	move	*a13(STICK_VAL_CUR),a0
	clr	a1

	movi	-yekvZDRIFT_VAL,a1
	btst	PLAYER_UP_BIT,a0
	jrnz	yekvsetvel

	movi	yekvZDRIFT_VAL,a1
	btst	PLAYER_DOWN_BIT,a0
	jrnz	yekvsetvel

	clr	a1
yekvsetvel
	move	a1,*a13(OBJ_ZVEL),L

