 SUBR	DO_CROWD_CHEER
	MOVK	C_OVERIDE|C_LONG,A3
	CLR	A4


 SUBR	crowd_cheer
		   
	CLR	A7
	BTST	B_RANDOM,A3
	JRZ	NO_RANDOMNESS
	MOVE	A4,A7
NO_RANDOMNESS
	movi	CROWDDATA,a4
	movi	NUMCROWD,a5
	movk	1,a6
yzfxloop
	MOVE	*A4(CHEER1),A1,L
	CMPI	yzfxside2_cheer1,A1
	JREQ	DO_NEXT_PERSON
	CMPI	yzfxside3_cheer1,A1
	JREQ	DO_NEXT_PERSON
	CMPI	yzfxdave_cheer1,A1
	JREQ	DO_NEXT_PERSON
	MOVE	A7,A0
	JRZ	DO_THEM_ALL
	CALLA	RNDPER
	JRLS	DO_NEXT_PERSON
DO_THEM_ALL
	BTST	B_OVERRIDE,A3
	JRNZ	JUST_DO_IT_ANYWAY
	MOVE	*A4(CHEER1),A8,L
	MOVE	*A4(SCPTR),A9,L
	CMP	A8,A9
	JRGE	DO_NEXT_PERSON
JUST_DO_IT_ANYWAY
	move	*a4(CHEER1),*a4(SCPTR),L
	BTST	B_L_OR_S,A3
	JRZ	OKAY_DO_SHORT
	move	*a4(CHEER2),*a4(SCPTR),L
OKAY_DO_SHORT
	move	a6,*a4(TIME),W

	move	*a4(CHEER1),A1,L
	CMPI	yzfxside1_cheer1,A1
	JRNE	DO_NEXT_PERSON
	addi	BSIZE,a4
	move	*a4(CHEER1),*a4(SCPTR),L
	move	a6,*a4(TIME),W
	addi	BSIZE,a4
	move	*a4(CHEER1),*a4(SCPTR),L
	move	a6,*a4(TIME),W
	addi	BSIZE*2,a4
	move	*a4(CHEER1),*a4(SCPTR),L
	move	a6,*a4(TIME),W

	;a5 is the loop counter...gotta dec it any time we add to a4.
	subk	4,a5
DO_NEXT_PERSON
	addi	BSIZE,a4
	dsj	a5,yzfxloop
	
	CALLA	START_FLASHES

	rets



	.end
