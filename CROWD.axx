DEF_ANISPD	equ	8
SPD_FOREVER	equ	7FFFh

CROWD_OBJS	equ	0h
CROWD_NORMANIM	equ	20h
CROWD_CHEERANIM	equ	40h

CANI_GOTO	equ	0 + 8000h
CANI_RNDWAIT	equ	1 + 8000h
CANI_END		equ	2 + 8000H
CANI_CODE	EQU	3 + 8000H
CANI_REPEAT	EQU	4 + 8000H
CANI_SHOULD_REPEAT EQU	5 + 8000H

SCPTR	.set	000	;UHL script pointer (next instruction)
TIME	.set	020h	;UHW time to hold
FRAME	.set	030h	;UHL current obj
CHEER1	.set	050h	;UHL cheer1 jump point
CHEER2	.set	070h	;UHL cheer2 jump point
REPEAT_P .SET	090H	;UHL REPEAT POINT TO JUMP BACK TO
REPEAT_N .SET	0B0H	;UHW REPEAT THIS NUMBER OF TIMES
BSIZE		equ	REPEAT_N+10h

NUMCROWD	equ	30

HICROWDZ	equ	58/2		;high z (after shift)

	BSSX	CROWDDATA,(NUMCROWD+1)*BSIZE

	BSSX	crowd_process,32



 SUBR	crowd_anim

	move	a13,@crowd_process,L

	;initialize
	movi	NUMCROWD,a0
	movi	CROWD_ANIMS,a1
	movi	CROWDDATA,a2
yzfxinitloop
	move	*a1+,a3,L
	move	*a3+,a14,W
	move	a14,*a2(TIME),W
	move	*a3+,a14,L
	move	a14,*a2(FRAME),L
	move	a3,*a2(SCPTR),L
	move	*a1+,a14,L
	move	a14,*a2(CHEER1),L
	move	*a1+,a14,L
	move	a14,*a2(CHEER2),L
	CLR	A14
	MOVE	A14,*A2(REPEAT_P),L
	MOVE	A14,*A2(REPEAT_N)
	addi	BSIZE,a2
	dsj	a0,yzfxinitloop

	clr	a14
	move	a14,*a2(SCPTR),L

yzfxmain_loop
	;if we're in reduce_bog mode, sleep until someone wakes us up.
	movk	1,a0
	move	@reduce_bog,a14
	jrz	yzfxslp
	movi	7FFFh,a0
yzfxslp	SLEEPR	a0

	;update CROWDDATA
	movi	CROWDDATA-BSIZE,a4
yzfxcd_loop
	addi	BSIZE,a4
	move	*a4(SCPTR),a14,L
	jrz	yzfxcd_done
	callr	animate_back
	jruc	yzfxcd_loop


 SUBR	animate_back
	move	*a4(TIME),a14,W
	dec	a14
	jrz	yzfxnext_command
	move	a14,*a4(TIME),W
	MOVK	1,A14
	rets


yzfxnext_command
	move	*a4(SCPTR),a5,L
yzfxnext_in_the_QUEUE
	move	*a5+,a14,W
	jrn	yzfxcani_command
	move	a14,*a4(TIME),W
	move	*a5+,a14,L
	move	a14,*a4(FRAME),L
	move	a5,*a4(SCPTR),L

	;You think a simple CLR would do the job here?  Try it.  I dare you.
	MOVK	1,A14
	DEC	A14
	rets

yzfxcani_command
	andi	7FFFh,a14
	X32	a14
	addi	yzfxcani_commands,a14
	move	*a14,a14,L
	jump	a14

yzfxcani_commands
	.long	yzfx_goto
	.long	yzfx_rndwait
	.LONG	yzfx_END_ANIM
	.LONG	yzfx_CODE
	.LONG	yzfx_RANDOM_REPEAT
	.LONG	yzfx_SHOULD_WE_WE_REPEAT

yzfx_CODE
	MOVE	*A5+,A0,L
	MMTM	SP,A0,A1,A2,A3,A4,A5,A6,A7,A8,A9,A10,A11,A14
	CALL	A0
	MMFM	SP,A0,A1,A2,A3,A4,A5,A6,A7,A8,A9,A10,A11,A14
	jruc	yzfxnext_in_the_QUEUE


yzfx_END_ANIM
	MOVI	-1,A14
	RETS

yzfx_goto
	move	*a5+,a5,L
	move	a5,*a4(SCPTR),L
	jruc	yzfxnext_command

yzfx_rndwait
	move	*a5+,a0,W
	calla	RNDRNG0
	move	a0,*a4(TIME),W
	move	a5,*a4(SCPTR),L
	rets

yzfx_RANDOM_REPEAT
	MOVE	*A5+,A0
	MOVE	A5,*A4(REPEAT_P),L
	CALLA	RNDRNG0
	MOVE	A0,*A4(REPEAT_N)
	jruc	yzfxnext_in_the_QUEUE

yzfx_SHOULD_WE_WE_REPEAT
	MOVE	*A4(REPEAT_N),A0
	DEC	A0
	MOVE	A0,*A4(REPEAT_N)
	JRZ	REACHED_LAST_LOOP
	JRN	REACHED_LAST_LOOP
	MOVE	*A4(REPEAT_P),*A4(SCPTR),L
	MOVE	*A4(REPEAT_P),A5,L
	jruc	yzfxnext_in_the_QUEUE
REACHED_LAST_LOOP
	CLR	A0
	MOVE	A0,*A4(REPEAT_N)
	jruc	yzfxnext_in_the_QUEUE



yzfxcd_done
	.ref	PCNT
	move	@PCNT,a14
	btst	0,a14
	jrz	yzfxmain_loop


	;update BAKLST
	move	@BAKLST,a8,L

yzfxbakloop
	move	*a8(OZPOS),a0,W
	srl	1,a0
	jrc	yzfxbakskip
	cmpi	HICROWDZ,a0
	jrgt	yzfxbakskip

	move	a0,a1
	X64	a1
	X128	a0
	add	a1,a0

	addi	CROWDDATA,a0
	move	*a0(FRAME),a0,L
	move	*a8(OIMG),a1,L
	cmp	a0,a1
	jreq	yzfxbakskip

	move	*a8(OCTRL),a1,W

	move	*a8(OXPOS),a2,W
	move	*a8(OXVEL),a3,W
	move	*a0(IANIOFFX),a4,W
	clr	a5
	btst	B_FLIPH,a1
	jrz	yzfxnoflip

	;obj is horz-flipped.  negate the Xanim point and adjust X pos
	; by XSZold-XSZnew
	neg	a4
	move	*a8(OSIZEX),a5,W
	move	*a0(ISIZEX),a14,W
	sub	a14,a5
yzfxnoflip
	add	a3,a2
	sub	a4,a2
	add	a5,a2
	move	a2,*a8(OXPOS),W
	move	a4,*a8(OXVEL),W


	move	*a8(OYPOS),a2,W
	move	*a8(OYVEL),a3,W
	move	*a0(IANIOFFY),a4,W
	add	a3,a2
	sub	a4,a2
	move	a2,*a8(OYPOS),W
	move	a4,*a8(OYVEL),W

	move	a0,a2
	move	a1,a3

	move	a2,*a8(OIMG),L
	move	*a2(0),*a8(OSIZE),L
	move	*a2(ISAG),*a8(OSAG),L

	setf	5,0,0
	move	*a2(ICTRL+7),*a8(OCTRL+7) ;Write 5 z comp bits
	setf	16,1,0
yzfxbakskip
	move	*a8,a8,L
 	jrnz	yzfxbakloop


	jruc	yzfxmain_loop


